#include <iostream>
using namespace std;

class Rectangle {
    int width, height;

public:
    Rectangle() {
        width = 0;
        height = 0;
    }
    Rectangle(int w) {
        width = w;
        height = w; 
    }
    Rectangle(int w, int h) {
        width = w;
        height = h;
    }

    void area() {
		int area=height*width;
		cout<< "Area is : "<<area<<endl;
    }
};

int main() {
Rectangle rect[3] = {
        Rectangle(),        
        Rectangle(10),       
        Rectangle(1, 6)     
    };   
for(int i=0;i<3;i++){
	rect[i].area();
}

    return 0;
}

